<%- include("partials/header") %>

    <h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="pTitle">Title</label>
            <input type="text" class="form-control" id="title" name="postTitle" aria-describedby="postPara">
          </div>
          <div class="form-group">
            <label for="pBody">Post</label>
            <textarea class="form-control" name="postBody" type="text" id="pBody" rows="5" cols="30" aria-label="With textarea"></textarea>
          </div>
        <button class="btn btn-primary" name="button" type="submit">Publish</button>
    </form>

